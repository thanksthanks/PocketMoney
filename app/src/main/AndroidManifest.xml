<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pocketmoney">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/money_box"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.DetailPlanActivity"></activity>
        <activity android:name=".Activity.ModifyPlanActivity" />
        <activity android:name=".Activity.ModifyWriteActivity" />
        <activity android:name=".Activity.GameMissionActivity" />
        <activity android:name=".Activity.GamePlayActivity" />
        <activity android:name=".Activity.PlanActivity" />
        <activity android:name=".Activity.SpendActivity" />
        <activity android:name=".Activity.WriteActivity" />
        <activity android:name=".Activity.LoginActivity" />
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>